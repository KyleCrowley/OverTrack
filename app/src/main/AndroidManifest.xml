<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kylercrowley.com.overtrack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.patch_notes.PatchNotesActivity" />
        <activity android:name=".features.patch_notes.PatchNoteDetailActivity" />
        <activity android:name=".features.player_search.PlayerSearchActivity" />
        <activity android:name=".features.profile.PlayerProfileActivity"></activity>
    </application>

</manifest>